<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragment.InputFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/header_nav_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:background="#E6E6E6"
        android:padding="10dp"
        android:weightSum="4">
        <LinearLayout
            android:id="@+id/type_chi_layout"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/header_type"
            android:weightSum="1"
            >
            <TextView
                android:id="@+id/txt_type_chi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền chi"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#FF5722"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/type_thu_layout"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/header_type"
            android:weightSum="2">
            <TextView
                android:id="@+id/txt_type_thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền thu"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#FF5722"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_container_input"
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_gravity="bottom">
    </FrameLayout>

</FrameLayout>