<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_input_main"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:text=" Ngày  :"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btn_thoigian"
        tools:layout_editor_absoluteY="79dp" />

    <Button
        android:id="@+id/btn_thoigian"
        android:layout_width="293dp"
        android:layout_height="45dp"
        android:background="@android:color/holo_green_light"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="67dp" />

    <TextView
        android:id="@+id/tv_ghichu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:text="Ghi Chú :"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/edit_ghichu"
        tools:layout_editor_absoluteY="130dp" />

    <EditText
        android:id="@+id/edit_ghichu"
        android:layout_width="293dp"
        android:layout_height="32dp"
        android:layout_marginTop="13dp"
        android:background="@color/white"
        android:hint="Chưa Nhập Vào "
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/btn_thoigian"
        tools:layout_editor_absoluteX="82dp" />

    <TextView
        android:id="@+id/tv_tienthu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:text="Ghi Chú :"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/edit_tienthu"
        tools:layout_editor_absoluteY="175dp" />

    <EditText
        android:id="@+id/edit_tienthu"
        android:layout_width="293dp"
        android:layout_height="32dp"
        android:layout_marginTop="13dp"
        android:background="@android:color/holo_orange_dark"
        android:hint="  0 "
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/edit_ghichu"
        tools:layout_editor_absoluteX="82dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="34dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="đ"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/edit_tienthu"
        tools:layout_editor_absoluteY="165dp" />

</androidx.constraintlayout.widget.ConstraintLayout>