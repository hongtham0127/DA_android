<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InputTypeThuFragment">

    <!-- TODO: Update blank fragment layout -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TableRow
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày :"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_thoigian"
                android:gravity="left" />
            <Button
                android:id="@+id/btn_thoigian"
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="#F3DDBC"
                />
        </TableRow>

        <TableRow
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/tv_ghichu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Ghi Chú :"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/edit_ghichu" />

            <EditText
                android:id="@+id/edit_ghichu"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                android:hint="Chưa Nhập Vào "
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_thoigian"
                />
        </TableRow>


        <TableRow
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/tv_tienthu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền thu :"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/edit_tienthu"
                android:gravity="left" />

            <EditText
                android:id="@+id/edit_tienthu"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F3DDBC"
                android:hint="  0 "
                android:textColorHint="@color/black"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_ghichu"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="đ"
                android:textSize="20dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/edit_tienthu"
                />
        </TableRow>
    </TableLayout>

</FrameLayout>