<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <Button
        android:id="@+id/btn_nhap"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/white"
        android:drawableTop="@drawable/baseline_nhap"
        android:textColor="@color/black"
        android:text="Nhập"/>


    <Button
        android:id="@+id/btn_lich_footer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/white"
        android:drawableTop="@drawable/baseline_calendar_month_24"
        android:textColor="@color/black"
        android:text="Lịch"/>

    <Button
        android:id="@+id/btn_baocao"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/white"
        android:drawableTop="@drawable/baseline_pie_chart_24"
        android:textColor="@color/black"
        android:text="Báo Cáo"/>
    <Button
        android:id="@+id/btn_khac"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/white"
        android:drawableTop="@drawable/baseline_khac"
        android:textColor="@color/black"
        android:text="Khác"/>

</LinearLayout>